@model Domain.Job

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Job</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="AddDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AddDate" class="form-control" />
                <span asp-validation-for="AddDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Degree" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Degree"  asp-items="Html.GetEnumSelectList<Domain.Degree>()" class="form-control"></select>
                <span asp-validation-for="Degree" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Duration" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Entreprise" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Entreprise" class="form-control" />
                <span asp-validation-for="Entreprise" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Expertise" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Expertise" class="form-control" />
                <span asp-validation-for="Expertise" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ExprerationDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ExprerationDate" class="form-control" />
                <span asp-validation-for="ExprerationDate" class="text-danger" />
            </div>
        </div>
       
        <div class="form-group">
            <label asp-for="Position" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sector" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Sector" asp-items="Html.GetEnumSelectList<Domain.Sector>()" class="form-control"></select>
                <span asp-validation-for="Sector" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SpecilityId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="SpecilityId" class ="form-control" asp-items="ViewBag.SpecilityId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="State" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="State" asp-items="Html.GetEnumSelectList<Domain.State>()" class="form-control"></select>
                <span asp-validation-for="State" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<Domain.JobType>()" class="form-control">
                   
                </select>
                <span asp-validation-for="Type" class="text-danger" />
            </div>
        </div>
       
       
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
